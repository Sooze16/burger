<div class="container">

    <div class="jumbotron ">
        <h1>Eat-Da-Burger! </h1>
        
       
        <br>
        <h2>Create Your Burger</h2>
        <card>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger" >ORDER HERE</label>
                    <input type="text" class="form-control-sm" id="newburger" name="burger">


                    <button type="submit"  class="btn btn-success pull" id="addburger"><span class="fa fa-thumbs-up"></span></button>
                </div>
            </form>
        </card>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="card card-default">
                <div class="card-heading" id="leftside"><strong>Pay Cashier Here!</strong>
                    
                </div>
                <div class="card-body">

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatBurger btn btn-warning" id="eatButton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-usd"></span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card card-default">
                <div class="card-heading" id="rightside"><strong>Burger is Ready for Pick Up!</strong>
                    
                </div>
                <div class="card-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="trashBurger btn btn-danger" id="trashButton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>



                </div>
            </div>
        </div>

    </div>

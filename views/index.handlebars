<div class="container" id="main">

    {{!-- <div class="jumbotron"> --}}
        <h1>Eat Da Burger!!! </h1>
        
        <p>Orders for Pickup.</p>
        <br>
        <h2>Select or Create Your Burger</h2>
        <card>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger">Order Fresh Burger</label>
                    <input type="text" id="newburger" name="burger">

                    {{!-- <select data-placeholder="" id="newburger" name="burger">
                        <option value="Nothing Selected" selected>Please Select a Burger</option>
                        <option value="Hamburger">Hamburger</option>
                        <option value="CheeseBurger">CheeseBurger</option>
                        <option value="VeggieBurger">Veggie Burger</option>
                    </select> --}}
                

                    <button  class="btn btn-success" id="addburger">Add Burger</button>
                </div>
            </form>
        </card>
    {{!-- </div> --}}
    <div class="row">
        <div class="col-sm-6">
            <div class="card card-default">
                <div class="card-heading" id="leftside"><strong>Order Your Burger</strong>
                    <p>Send order to cashier when ready for pick up</p>
                </div>
                <div class="card-body">

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatBurger btn btn-warning" id="eatButton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-usd"></span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card card-default">
                <div class="card-heading" id="rightside"><strong>Burger is Ready for Pick Up</strong>
                    <p>Remove order from pick up when delivered</p>
                </div>
                <div class="card-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="trashBurger btn btn-danger" id="trashButton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>



                </div>
            </div>
        </div>

    </div>
  
</div>